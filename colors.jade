doctype html
html(lang="en-UK", data-theme="light")

  head

    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title Erste Group Colours
    link(rel="icon", href="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQAQMAAAAlPW0iAAAABlBMVEUAAAD/AAAb/40iAAAAAXRSTlMAQObYZgAAACRJREFUCNdjYGxgYD4AQkAGEMj/YLD/A0I2DFAGEAE5EIb8DwAftg3Myoe9bQAAAABJRU5ErkJggg==")
    //link(rel="apple-touch-icon-precomposed", href="apple-touch-icon.png")
    block stylesheets
      link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:700,300,400")
      style
        include /style.css

  body

    block content
      header
        .full-width(role="banner")
          a.branding(href="https://www.erstegroup.com/")
            include /logo.svg
        h1.full-width Colours for Digital&nbsp;Media
      main(role="main")
        each subset in Object.keys(meta)
          section.colors(class="colors-#{subset}")
            h2= meta[subset].title
            p= meta[subset].description
            table
              thead
                tr
                  th Hex
                  th RGB
                  th Additional information
              tbody
                each color in colors
                  if subset === (color.type || "additional")
                    tr(data-color=color.value, style="border-color:#{color.value}")
                      td
                        i #
                        code= color.value.slice(1)
                      td
                        i rgb(
                        = parseInt(color.value.slice(1,3),16)
                        i ,
                        = parseInt(color.value.slice(3,5),16)
                        i ,
                        = parseInt(color.value.slice(5,7),16)
                        i )
                      td
                        if color.name
                          span.description= color.name
      footer
        hr.hidden-screen
        .full-width(role="contentinfo")
          p.build
            | Made with 
            abbr(title="love") &#x2764;
            |  by 
            a(href="http://www.beeone.at/") BeeOne GmbH
          p.legal
            a(href="README.md")
              abbr(title="Copyright") &copy;
              |  2015
            |  
            a(href="https://www.erstegroup.com/") Erste Group Bank AG


    block javascripts
      script
        include /theme.js
